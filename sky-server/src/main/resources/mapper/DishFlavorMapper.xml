<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishFlavorMapper">
    <!--批量插入数据-->
    <!--useGeneratedKeys与keyProperty用来获取主键属性值，SQL语句写哪这两个就加哪里-->
    <insert id="addFlavor" useGeneratedKeys="true" keyProperty="id">
        insert into dish_flavor values
        <foreach collection="flavors" item="flavor" separator=",">
            (null,#{flavor.dishId},#{flavor.name},#{flavor.value})
        </foreach>
    </insert>
    <delete id="deleteFlavor">
        delete from dish_flavor where dish_id in
        <foreach collection="dishflavorIds" separator="," item="dishflavorId" open="(" close=")">
            #{dishflavorId}
        </foreach>
    </delete>
    <delete id="deleteByDishId">
        delete from dish_flavor where dish_id = #{dishId}
    </delete>
    <select id="selectById" resultType="com.sky.entity.DishFlavor">
        select * from dish_flavor where dish_id = #{dishId}
    </select>
</mapper>