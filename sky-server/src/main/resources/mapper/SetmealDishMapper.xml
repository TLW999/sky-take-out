<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <insert id="addSetMealDish" useGeneratedKeys="true" keyProperty="id">
        insert into setmeal_dish values
        <foreach collection="setmealDishes" item="setmealDish" separator=",">
            (null,#{setmealDish.setmealId},#{setmealDish.dishId},#{setmealDish.name},#{setmealDish.price},#{setmealDish.copies})
        </foreach>
    </insert>
    <delete id="deletemeals">
        delete from setmeal_dish where setmeal_id in
        <foreach collection="mealids" item="mealid" separator="," open="(" close=")">
            #{mealid}
        </foreach>
    </delete>
    <delete id="delete">
        delete from setmeal_dish where setmeal_id = #{id}
    </delete>
    <select id="selectid" resultType="com.sky.entity.SetmealDish">
        select * from setmeal_dish where setmeal_id = #{id}
    </select>
</mapper>